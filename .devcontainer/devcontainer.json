{
  "name": "pillar",
  "dockerComposeFile": "docker-compose.yml",
  "service": "node",
  "workspaceFolder": "/workspace",
  "initializeCommand": "bash ./.devcontainer/initializeCommand.sh",
  "postCreateCommand": "bash ./.devcontainer/postCreatedCommand.sh",
  "postStartCommand": "npm i && npm run route && npm run migrate && npx playwright install",
  "overrideCommand": true,
  "remoteUser": "node",
  "customizations": {
    "vscode": {
      "extensions": [
        "MS-CEINTL.vscode-language-pack-ja",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens",
        "mhutchie.git-graph",
        "dbaeumer.vscode-eslint",
        "dsznajder.es7-react-js-snippets",
        "foxundermoon.next-js",
        "PulkitGangwar.nextjs-snippets",
        "clinyong.vscode-css-modules",
        "Divlo.vscode-styled-jsx-languageserver",
        "Divlo.vscode-styled-jsx-syntax",
        "appulate.filewatcher",
        "Pivotal.vscode-manifest-yaml",
        "jock.svg",
        "yzhang.markdown-all-in-one",
        "shd101wyy.markdown-preview-enhanced",
        "GrapeCity.gc-excelviewer",
        "hediet.vscode-drawio",
        "ritwickdey.LiveServer",
        "Prisma.prisma",
        "ms-playwright.playwright"
      ],
      "settings": {
        "liveServer.settings.root": "/dist/out",
        "files.associations": {
          ".env.*": "properties"
        },
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit",
          "source.organizeImports": "explicit"
        },
        "scss.lint.unknownAtRules": "ignore",
        "[prisma]": {
          "editor.defaultFormatter": "Prisma.prisma"
        },
        "filewatcher.commands": [
          {
            "match": "\\\\src\\\\(app(?!.*\\\\_).*(?<=\\\\)(page\\.tsx|route\\.ts)|pages(?!.*\\\\_).*\\.tsx?)$",
            "isAsync": true,
            "cmd": "node ${currentWorkspace}/scripts/next-route.mjs --quiet",
            "event": "onFileCreate"
          },
          {
            "match": "\\\\src\\\\(app(?!.*\\\\_).*(?<=\\\\)(page\\.tsx|route\\.ts)|pages(?!.*\\\\_).*\\.tsx?)$",
            "isAsync": true,
            "cmd": "node ${currentWorkspace}/scripts/next-route.mjs --quiet",
            "event": "onFileRename"
          },
          {
            "match": "\\\\src\\\\(app(?!.*\\\\_).*(?<=\\\\)(page\\.tsx|route\\.ts)|pages(?!.*\\\\_).*\\.tsx?)$",
            "isAsync": true,
            "cmd": "node ${currentWorkspace}/scripts/next-route.mjs --quiet",
            "event": "onFileDelete"
          }
        ]
      }
    }
  }
}