{
  "name": "next-app-template",
  "version": "0.0.0",
  "description": "next-app templates",
  "private": true,
  "scripts": {
    "clean": "node scripts/clean.mjs",
    "route": "node scripts/next-route.mjs",
    "dev": "bash scripts/next-dev.sh",
    "build": "npm run route && npx next build",
    "next": "bash scripts/next-start.sh",
    "export": "npm run clean && npx cross-env NEXT_OUTPUT=\"dist\" npm run build",
    "migrate": "npx prisma migrate dev",
    "type-check": "npx tsc -p ./src/tsconfig.json --noEmit",
    "lint": "npx next lint",
    "format": "npx next lint --fix",
    "jest": "npx jest",
    "test": "npm run type-check | npm run jest",
    "playwright": "npx playwright test && npx playwright show-report"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.4.2",
    "@prisma/client": "^5.19.1",
    "next": "^15.0.4",
    "next-auth": "^5.0.0-beta.25",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.1",
    "@types/jest": "^29.5.13",
    "@types/node": "^22",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-next": "15.0.0-rc.0",
    "jest": "^29.7.0",
    "prisma": "^5.19.1",
    "sass": "^1.82.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
